<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Theme.Debug" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="DebugDrawer.Header" parent="">
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="DebugDrawer.RowWidget" parent="">
        <item name="android:minHeight">26dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="DebugDrawer.RowTitle" parent="DebugDrawer.RowWidget">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DebugDrawer.RowValue" parent="DebugDrawer.RowWidget">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>