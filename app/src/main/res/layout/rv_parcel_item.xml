<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/half_spacing">

    <android.support.v7.widget.CardView
        android:id="@+id/parcel_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="2dp"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:layout_gravity="center"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/double_spacing">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/parcel_name"
                    style="@style/Base.TextAppearance.AppCompat"
                    android:layout_width="match_parent"
                    android:textAllCaps="true"
                    android:layout_toLeftOf="@id/more"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_height="24dp"
                    tools:text="NOMBRE DEL PAQUETE"/>

                <ImageView
                    android:background="@null"
                    android:id="@+id/more"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_more"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/parcel_code"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                tools:text="RF11232423415706W"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/single_spacing"
                android:background="#d5d5d5"
                />


            <TextView
                style="?textAppearanceListItem"
                android:text="@string/ultimo_estado_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/single_spacing"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="@dimen/single_spacing"
                    android:layout_marginRight="@dimen/single_spacing"
                    android:src="@drawable/ic_delivered"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:text="Entregado"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    />
            </LinearLayout>

        </LinearLayout>




    </android.support.v7.widget.CardView>
</FrameLayout>